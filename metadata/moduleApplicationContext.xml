<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="synchronizationInterceptor" class="org.openmrs.module.sync.api.db.hibernate.HibernateSyncInterceptor" primary="true"/>

    <bean id="@MODULE_ID@UrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="order"><value>1</value></property>
    	<property name="mappings">
            <props>
            	<prop key="module/@MODULE_ID@/synchronizationStatus.list">synchronizationStatusListController</prop>
				<prop key="module/@MODULE_ID@/synchronizationImport.list">synchronizationImportListController</prop>
				<prop key="module/@MODULE_ID@/synchronizationHistory.list">synchronizationHistoryListController</prop>
				<prop key="module/@MODULE_ID@/synchronizationConfig.list">synchronizationConfigListController</prop>
				<prop key="module/@MODULE_ID@/synchronizationStats.list">synchronizationStatsListController</prop>
				<prop key="module/@MODULE_ID@/synchronizationConfigServer.form">synchronizationServerFormController</prop>
				<prop key="module/@MODULE_ID@/synchronizationHelp.list">synchronizationHelpListController</prop>
	    	</props>
		</property>
    </bean>

    <bean id="synchronizationStatusListController" class="@MODULE_PACKAGE@.web.controller.SynchronizationStatusListController">
		<property name="commandName"><value>synchronizationStatusList</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationStatusList</value></property>
		<property name="successView"><value>synchronizationStatus.list</value></property>
	</bean>
	
	<bean id="synchronizationImportListController"  class="@MODULE_PACKAGE@.web.controller.SynchronizationImportListController">
		<property name="commandName"><value>synchronizationImportList</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationImportList</value></property>
		<property name="successView"><value>synchronizationImport.list</value></property>
	</bean>

	<bean id="synchronizationHistoryListController"  class="@MODULE_PACKAGE@.web.controller.SynchronizationHistoryListController">
		<property name="commandName"><value>synchronizationHistoryList</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationHistoryList</value></property>
		<property name="successView"><value>synchronizationHistory.list</value></property>
	</bean>

	<bean id="synchronizationConfigListController"  class="@MODULE_PACKAGE@.web.controller.SynchronizationConfigListController">
		<property name="commandName"><value>synchronizationConfigList</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationConfigList</value></property>
		<property name="successView"><value>synchronizationConfig.list</value></property>
	</bean>

	<bean id="synchronizationStatsListController"  class="@MODULE_PACKAGE@.web.controller.SynchronizationStatsListController">
		<property name="commandName"><value>synchronizationStatsList</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationStatsList</value></property>
		<property name="successView"><value>synchronizationStats.list</value></property>
	</bean>

	<bean id="synchronizationHelpListController"  class="@MODULE_PACKAGE@.web.controller.SynchronizationHelpListController">
		<property name="commandName"><value>synchronizationHelpList</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationHelpList</value></property>
		<property name="successView"><value>synchronizationHelp.list</value></property>
	</bean>

	<bean id="synchronizationServerFormController"  class="@MODULE_PACKAGE@.web.controller.SynchronizationServerFormController">
		<property name="commandName"><value>server</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/synchronizationServerForm</value></property>
		<property name="successView"><value>synchronizationConfig.list</value></property>
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>@MODULE_PACKAGE@.api.SyncService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="@MODULE_PACKAGE@.api.impl.SyncServiceImpl">
							<property name="syncDAO">
								<bean class="@MODULE_PACKAGE@.api.db.hibernate.HibernateSyncDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors"/>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>@MODULE_PACKAGE@.api.SyncIngestService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="@MODULE_PACKAGE@.api.impl.SyncIngestServiceImpl" />
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors"/>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
    
</beans>