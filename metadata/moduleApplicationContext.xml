<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd
           http://www.springframework.org/schema/util
           http://www.springframework.org/schema/util/spring-util-2.0.xsd">

	<bean id="synchronizationInterceptor" class="org.openmrs.module.sync.api.db.hibernate.HibernateSyncInterceptor" primary="true"/>

    <!-- The default place to look for controllers that have annotations -->
	<context:component-scan base-package="org.openmrs.module.sync.web.controller" />
	
    <bean id="@MODULE_ID@UrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
    	<property name="order"><value>1</value></property>
    	<property name="mappings">
            <props>
            	<prop key="module/@MODULE_ID@/status.list">statusListController</prop>
				<prop key="module/@MODULE_ID@/import.list">importListController</prop>
				<prop key="module/@MODULE_ID@/config.list">configListController</prop>
				<prop key="module/@MODULE_ID@/overview.htm">overviewController</prop>
				<prop key="module/@MODULE_ID@/help.htm">helpController</prop>
	    	</props>
		</property>
    </bean>
    
    <bean id="statusListController" class="@MODULE_PACKAGE@.web.controller.StatusListController">
		<property name="commandName"><value>statusCommandObject</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/statusList</value></property>
		<property name="successView"><value>status.list</value></property>
	</bean>
	
	<bean id="importListController" class="@MODULE_PACKAGE@.web.controller.ImportListController">
		<property name="commandName"><value>importCommandObject</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/importList</value></property>
		<property name="successView"><value>import.list</value></property>
	</bean>

	<bean id="configListController" class="@MODULE_PACKAGE@.web.controller.ConfigListController">
		<property name="commandName"><value>configListBackingObject</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/configList</value></property>
		<property name="successView"><value>config.list</value></property>
	</bean>

	<bean id="overviewController" class="@MODULE_PACKAGE@.web.controller.OverviewController">
		<property name="commandName"><value>commandObject</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/overview</value></property>
		<property name="successView"><value>overview.htm</value></property>
	</bean>

	<bean id="helpController" class="@MODULE_PACKAGE@.web.controller.HelpController">
		<property name="commandName"><value>parentServer</value></property>
		<property name="formView"><value>/module/@MODULE_ID@/help</value></property>
		<property name="successView"><value>help.htm</value></property>
	</bean>

	<bean class="@MODULE_PACKAGE@.api.db.hibernate.HibernateSyncDAO">
		<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>@MODULE_PACKAGE@.api.SyncService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="@MODULE_PACKAGE@.api.impl.SyncServiceImpl" autowire="byType" />
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors"/>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>@MODULE_PACKAGE@.api.SyncIngestService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="@MODULE_PACKAGE@.api.impl.SyncIngestServiceImpl" />
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors"/>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	
</beans>