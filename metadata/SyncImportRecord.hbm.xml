<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.sync.ingest">

	<class name="SyncImportRecord" table="synchronization_import">

		<id name="recordId" type="int" column="record_id">
			<generator class="native" />
		</id>

		<property name="uuid" type="java.lang.String"
			column="uuid" length="36" />

		<property name="creator" type="java.lang.String"
			column="creator" length="36" />

		<property name="databaseVersion" type="java.lang.String"
			column="database_version" length="8" />
			
		<property name="timestamp" type="java.util.Date"
			column="timestamp" length="19" />

		<property name="retryCount" type="int" 
			column="retry_count" length="11" />
		
		<property name="state">
			<type name="org.openmrs.api.db.hibernate.usertype.GenericEnumUserType">
				<param name="enumClassName">org.openmrs.module.sync.api.SyncRecordState</param>
			</type>
		</property>

		<property name="errorMessage" type="java.lang.String"
			column="error_message" length="255" />

	</class>
</hibernate-mapping>
